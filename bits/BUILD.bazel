load("@rules_rust//rust:defs.bzl", "rust_doc", "rust_doc_test", "rust_library", "rust_test", "rust_test_suite")

package(default_visibility = ["//visibility:private"])

rust_library(
    name = "bits",
    srcs = glob(
        ["*.rs"],
        exclude = ["*_test.rs"],
    ),
    visibility = ["//visibility:public"],
)

rust_test_suite(
    name = "tests",
    srcs = glob(["*_test.rs"]),
    deps = [
        ":bits",
    ],
)

rust_test(
    name = "cfg_test",
    crate = ":bits",
)

rust_doc_test(
    name = "doc_test",
    crate = ":bits",
)

rust_doc(
    name = "doc",
    crate = ":bits",
)
