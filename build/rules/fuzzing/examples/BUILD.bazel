load("@rules_rust//rust:defs.bzl", "rust_binary")
load("//build/rules/fuzzing:defs.bzl", "rust_fuzzing")

package(default_visibility = ["//:__subpackages__"])

rust_fuzzing(
    name = "buffer_overflow",
    srcs = ["buffer_overflow.rs"],
    sanitizer = "address",
    deps = [
        "@crates//:arbitrary",
        "@crates//:libfuzzer-sys",
    ],
)

rust_fuzzing(
    name = "use_after_scope",
    srcs = ["use_after_scope.rs"],
    sanitizer = "address",
    deps = [
        "@crates//:arbitrary",
        "@crates//:libfuzzer-sys",
    ],
)

# ASAN_OPTIONS=detect_leaks=1
rust_fuzzing(
    name = "memory_leaks",
    srcs = ["memory_leaks.rs"],
    sanitizer = "address",
    deps = [
        "@crates//:arbitrary",
        "@crates//:libfuzzer-sys",
    ],
)

rust_fuzzing(
    name = "data_race",
    srcs = ["data_race.rs"],
    sanitizer = "thread",
    deps = [
        "@crates//:arbitrary",
        "@crates//:libfuzzer-sys",
    ],
)
